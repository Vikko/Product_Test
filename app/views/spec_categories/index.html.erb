<h1>Listing spec categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @spec_categories.each do |spec_category| %>
  <tr>
    <td><%=h spec_category.name %></td>
    <td><%= link_to 'Show', spec_category %></td>
    <td><%= link_to 'Edit', edit_spec_category_path(spec_category) %></td>
    <td><%= link_to 'Destroy', spec_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New spec category', new_spec_category_path %> | <%= link_to "To specs", specs_path %>