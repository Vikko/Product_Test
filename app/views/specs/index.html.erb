<h1>Listing specs</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Category</th>
  </tr>

<% @specs.each do |spec| %>
  <tr>
    <td><%=h spec.name %></td>
    <td><%=h spec.spec_category.name %></td>
    <td><%= link_to 'Show', spec %></td>
    <td><%= link_to 'Edit', edit_spec_path(spec) %></td>
    <td><%= link_to 'Destroy', spec, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New spec', new_spec_path %> | <%= link_to "To products", products_path %>